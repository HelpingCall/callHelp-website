{% extends 'emails/mail_base.html.twig' %}
{% block body %}
    {% embed 'emails/blocks/1-col.twig' %}
        {% block title %}Es gibt eine neue Bestellung.{% endblock %}
        {% block body %}
            <p>Folgende Artikel/ Angebote wurden bestellt:</p>
            <table>
                <tr>
                    <th>Anzahl</th>
                    <th>Artikel</th>
                    <th>Einzelpreis</th>
                </tr>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.amount }}</td>
                        <td style="padding-left:5%">{{ order.name }} </td>
                        <td style="padding-left:18%">{{ order.price }}€</td>
                    </tr>

                {% endfor %}
                <tr>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                        Gesamtsumme: {{ invoice_number }} €
                    </td>
                </tr>
            </table>

            <p>
                Bitte prüfen Sie ob Ihre Versandadresse stimmt: </br>

                {% if company is same as ('') %}
                    <span  style="white-space: pre"> {{ firstname }} {{ lastname }}</span> </br>
                    <span  style="white-space: pre"> {{ street }} {{ housenumber }}</span> </br>
                    <span  style="white-space: pre"> {{ zipcode }} {{ city }}</span> </br>
                    <span  style="white-space: pre"> Telefonnummer: {{ phone }} </span> </br>
                    <span  style="white-space: pre"> E-Mail: {{ emailAddress }}</span> </br>
                {% else %}
                    <span  style="white-space: pre"> Firma {{ company }} </span> </br>
                    <span  style="white-space: pre"> zH. {{ firstname }} {{ lastname }}</span> </br>
                    <span  style="white-space: pre"> {{ street }} {{ housenumber }}</span> </br>
                    <span  style="white-space: pre"> {{ zipcode }} {{ city }}</span> </br>
                    <span  style="white-space: pre"> Telefonnummer: {{ phone }} </span> </br>
                    <span  style="white-space: pre"> E-Mail: {{ emailAddress }}</span> </br>
                {% endif %}
            </p>
            <p>
            </p>
            <p>

            </p>
        {% endblock %}
    {% endembed %}
{% endblock %}