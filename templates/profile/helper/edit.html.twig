{% extends 'profile/profile-base.html.twig' %}
{% block title %} {{ 'title.profile.helper.edit'|trans }} {% endblock %}
{% block body %}
    <main>
        <section class="service-area services-padding">
        <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12">
                    {{ form_start(form) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.email) }}
                    <button type="submit" class="btn btn-primary">Save</button>

                    <a href="{{ path('profile_helper_list') }}" class="btn btn-secondary">Cancel</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>

{% endblock %}