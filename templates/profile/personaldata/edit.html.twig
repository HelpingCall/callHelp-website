{% extends 'profile/profile-base.html.twig' %}
{% block title %} {{ 'title.profile.personaldata.edit'|trans }} {% endblock %}
{% block body %}
    <main>
        <section class="service-area services-padding">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12">
                        {% if passwordUpdate == 1 %}
                            <div class="alert alert-success" role="alert">
                                {{'password.update.success' | trans}}
                            </div>
                        {% elseif  addressUpdate == 1%}
                            <div class="alert alert-success" role="alert">
                                {{'address.update.success' | trans}}
                            </div>
                        {% elseif  contactUpdate == 1%}
                            <div class="alert alert-success" role="alert">
                                {{'contact.update.success' | trans}}
                            </div>
                        {% endif %}
                        {%  if type is same as ('password') %}
                            {{ form_start(form) }}

                            {{ form_row(form.email) }}
                            {{ form_row(form.plainPassword) }}
                            <button type="submit" class="btn btn-primary">{{'button.save'|trans}}</button>

                            <a href="{{ path('profile_personaldata_changePassword') }}" class="btn btn-secondary">{{'button.cancel'|trans}}</a>
                            {{ form_end(form) }}

                        {% elseif type is same as ('address') %}

                            {{ form_start(form) }}

                            {{ form_row(form.street) }}
                            {{ form_row(form.housenumber)}}
                            {{ form_row(form.zipcode)}}
                            {{ form_row(form.city)}}

                            <button type="submit" class="btn btn-primary">{{'button.save'|trans}}</button>

                            <a href="{{ path('profile_personaldata_updateAdress') }}" class="btn btn-secondary">{{'button.cancel'|trans}}</a>
                            {{ form_end(form) }}

                        {% elseif type is same as ('contact') %}

                            {{ form_start(form) }}

                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname)}}
                            {{ form_row(form.email)}}
                            {{ form_row(form.telephonenumber)}}

                            <button type="submit" class="btn btn-primary">{{'button.save'|trans}}</button>

                            <a href="{{ path('profile_personaldata_updateContact') }}" class="btn btn-secondary">{{'button.cancel'|trans}}</a>
                            {{ form_end(form) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}