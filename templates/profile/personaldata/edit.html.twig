{% extends 'profile/profile-base.html.twig' %}
{% block title %} {{ 'title.profile.personaldata.edit'|trans }} {% endblock %}
{% block body %}
    <main>
        <section class="service-area services-padding">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12">
                        {% if passwordUpdate == 1 %}
                            <div class="alert alert-success" role="alert">
                                {{'password.update.success' | trans}}
                            </div>
                        {% endif %}
                        {{ form_start(form) }}

                        {{ form_row(form.email) }}
                        {{ form_row(form.plainPassword) }}
                        <button type="submit" class="btn btn-primary">Save</button>

                        <a href="{{ path('profile_personaldata_show') }}" class="btn btn-secondary">Cancel</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
    </main>

{% endblock %}