{% extends 'base.html.twig' %}

{% block title %}{{'sign-in.title'|trans}}{% endblock %}

{% block body %}
    <section id="contact" class="contact pt-5">
        <div class="container"  style="background: #fff">


            <div class="row">
                <div class="col-lg-8 mt-5 mt-lg-0 offset-sm-2" data-aos="fade-left" id="commentForm" style="padding-top: 5%; padding-bottom: 5%">


                    <form method="post">
                        {% if error_message %}
                            <hr/>
                            <div class="alert alert-danger">
                                {{ error_message.messageKey|trans }}
                            </div>
                        {% endif %}
                        {% if app.user %}
                            <div class="alert alert-warning mb-3">
                               {{'sign-in.already-loged-in'|trans}}{{ app.user.username }}, <a href="{{ path('logout') }}" style="color: #868c98;font-weight: 300;">{{'sing-in.logout' |trans}}</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal">{{'sign-in.heading' |trans}}</h1>
                        <div class="form-group">
                            <label for="inputEmail">{{'sign-in.email' |trans}}</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{{'sign-in.email' |trans}}" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">{{'sign-in.password' |trans}}</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{'sign-in.password' |trans}}" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

                        <div class="text-center"><button type="submit" class="btn btn-primary">{{'button.sign-in' |trans}}</button></div>
                    </form>


                </div>

            </div>
        </div>
    </section>
{% endblock %}
